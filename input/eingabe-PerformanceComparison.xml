<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/inputReader/simulation.xsd">
    <input>
        <tStart>0.0</tStart>
        <tEnd>0.5</tEnd>
        <deltaT>0.5</deltaT>
        <inputType>LJF</inputType>
        <particleContainerType>no</particleContainerType>
        <r_cutoff>3.0</r_cutoff>
        <domainSizeX>180</domainSizeX>
        <domainSizeY>90</domainSizeY>
        <domainSizeZ>1</domainSizeZ>
        <boundary1Type>1</boundary1Type>
        <boundary2Type>1</boundary2Type>
        <boundary3Type>1</boundary3Type>
        <boundary4Type>1</boundary4Type>
        <boundary5Type>1</boundary5Type>
        <boundary6Type>1</boundary6Type>
        <temp_init>40</temp_init>
        <n_thermostat>1000</n_thermostat>
        <temp_target>40</temp_target>
        <delta_temp>0.0005</delta_temp>
        <g_grav>-12.44</g_grav>
        <particles>
            <x>20.0</x>
            <y>20.0</y>
            <z>0.50</z>
            <velocityX>0.0</velocityX>
            <velocityY>0.0</velocityY>
            <velocityZ>0.0</velocityZ>
            <mass>1</mass>
            <epsilon>1</epsilon>
            <sigma>1</sigma>
        </particles>
        <cuboids>
            <n1>80.0</n1>
            <n2>100.0</n2>
            <n3>1.0</n3>
            <distance>1.1225</distance>
            <meanVelocity>0.1</meanVelocity>
            <dimension>3.0</dimension>
        </cuboids>
    </input>
    <output>
        <baseName>simulation_output</baseName>
        <writeFrequency>100</writeFrequency>
        <outputType>vtk</outputType>
    </output>
    <config>
        <performanceMeasurement>true</performanceMeasurement>
        <logLevel>warn</logLevel>
    </config>
</simulation>
