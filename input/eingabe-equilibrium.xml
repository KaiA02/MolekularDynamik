<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/inputReader/simulation.xsd">
    <input>
        <tStart>0.0</tStart>
        <tEnd>1.0</tEnd>
        <deltaT>0.0005</deltaT>
        <inputType>LJF</inputType>
        <particleContainerType>LC</particleContainerType>
        <r_cutoff>3</r_cutoff>
        <domainSizeX>303</domainSizeX>
        <domainSizeY>180</domainSizeY>
        <domainSizeZ>1</domainSizeZ>
        <boundary1Type>2</boundary1Type>
        <boundary2Type>2</boundary2Type>
        <boundary3Type>2</boundary3Type>
        <boundary4Type>2</boundary4Type>
        <boundary5Type>2</boundary5Type>
        <boundary6Type>2</boundary6Type>
        <thermostatON>YES</thermostatON>
        <temp_init>0.5</temp_init>
        <n_thermostat>1000</n_thermostat>
        <temp_target>0.5</temp_target>
        <delta_temp>0</delta_temp>
        <g_grav>-12.44</g_grav>

        <particles>
            <x>1.5</x>
            <y>2</y>
            <z>1.5</z>
            <velocityX>0.0</velocityX>
            <velocityY>0.0</velocityY>
            <velocityZ>0.0</velocityZ>
            <mass>1</mass>
            <epsilon>1</epsilon>
            <sigma>1.2</sigma>
        </particles>
        <cuboids>
            <n1>250</n1>
            <n2>50</n2>
            <n3>1</n3>
            <distance>1.2</distance>
            <meanVelocity>0.1</meanVelocity>
            <dimension>3</dimension>
            <isMembrane>NO</isMembrane>
        </cuboids>

    </input>
    <output>
        <baseName>simulation_output</baseName>
        <writeFrequency>100</writeFrequency>
        <outputType>vtk</outputType>
    </output>
    <config>
        <performanceMeasurement>false</performanceMeasurement>
        <logLevel>warn</logLevel>
    </config>
</simulation>
