<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/inputReader/simulation.xsd">
    <input>
        <tStart>0.0</tStart>
        <tEnd>10.0</tEnd>
        <deltaT>0.0005</deltaT>
        <inputType>LJF</inputType>
        <particleContainerType>LC</particleContainerType>
        <r_cutoff>3.0</r_cutoff>
        <domainSizeX>80</domainSizeX>
        <domainSizeY>60</domainSizeY>
        <domainSizeZ>1</domainSizeZ>
        <boundary1Type>no</boundary1Type>
        <boundary2Type>no</boundary2Type>
        <boundary3Type>no</boundary3Type>
        <boundary4Type>no</boundary4Type>
        <boundary5Type>no</boundary5Type>
        <boundary6Type>no</boundary6Type>
        <particles>
            <x>60.0</x>
            <y>25.0</y>
            <z>0.0</z>
            <velocityX>0.0</velocityX>
            <velocityY>-10.0</velocityY>
            <velocityZ>0.0</velocityZ>
            <mass>1</mass>
        </particles>
        <disk>
            <radius>10</radius>
            <distance>1.1225</distance>
            <dimension>2</dimension>
        </disk>
    </input>
    <output>
        <baseName>simulation_output</baseName>
        <writeFrequency>100</writeFrequency>
        <outputType>vtk</outputType>
    </output>
    <config>
        <performanceMeasurement>false</performanceMeasurement>
        <logLevel>warn</logLevel>
    </config>
</simulation>
