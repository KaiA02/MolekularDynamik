<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/inputReader/simulation.xsd">
    <input>
        <tStart>0.0</tStart>
        <tEnd>3.0</tEnd>
        <deltaT>0.0005</deltaT>
        <ParallelStrategy>0</ParallelStrategy>
        <smoothLJ>false</smoothLJ>
        <particleContainerType>LC</particleContainerType>
        <r_cutoff>3.0</r_cutoff>
        <r_l>0</r_l>
        <domainSizeX>90</domainSizeX>
        <domainSizeY>90</domainSizeY>
        <domainSizeZ>90</domainSizeZ>
        <boundary1Type>3</boundary1Type>
        <boundary2Type>3</boundary2Type>
        <boundary3Type>3</boundary3Type>
        <boundary4Type>3</boundary4Type>
        <boundary5Type>3</boundary5Type>
        <boundary6Type>3</boundary6Type>
        <thermostatON>YES</thermostatON>
        <temp_init>0.01</temp_init>
        <n_thermostat>40</n_thermostat>
        <temp_target>3.0</temp_target>
        <delta_temp>0.001</delta_temp>
        <g_grav>0</g_grav>
        <particles>
            <x>10.0</x>
            <y>10.0</y>
            <z>10.0</z>
            <velocityX>0.0</velocityX>
            <velocityY>0.0</velocityY>
            <velocityZ>0.0</velocityZ>
            <mass>1</mass>
            <epsilon>1</epsilon>
            <sigma>1</sigma>
        </particles>
        <cuboids>
            <n1>10.0</n1>
            <n2>10.0</n2>
            <n3>10.0</n3>
            <distance>1.1225</distance>
            <meanVelocity>0.1</meanVelocity>
            <dimension>3.0</dimension>
        </cuboids>
    </input>
    <output>
        <baseName>simulation_output</baseName>
        <writeFrequency>100</writeFrequency>
        <outputType>vtk</outputType>
    </output>
    <config>
        <performanceMeasurement>false</performanceMeasurement>
        <logLevel>warn</logLevel>
    </config>
</simulation>