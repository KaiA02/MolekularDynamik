<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/inputReader/simulation.xsd">
    <input>
        <tStart>0.0</tStart>
        <tEnd>100</tEnd>
        <deltaT>0.0005</deltaT>
        <ParallelStrategy>1</ParallelStrategy>
        <smoothLJ>false</smoothLJ>
        <particleContainerType>LC</particleContainerType>
        <r_cutoff>3.6</r_cutoff>
        <r_l>0</r_l>
        <domainSizeX>60</domainSizeX>
        <domainSizeY>60</domainSizeY>
        <domainSizeZ>60</domainSizeZ>
        <boundary1Type>3</boundary1Type>
        <boundary2Type>3</boundary2Type>
        <boundary3Type>2</boundary3Type>
        <boundary4Type>2</boundary4Type>
        <boundary5Type>3</boundary5Type>
        <boundary6Type>3</boundary6Type>
        <thermostatON>YES</thermostatON>
        <temp_init>40</temp_init>
        <n_thermostat>1000</n_thermostat>
        <temp_target>40</temp_target>
        <delta_temp>0</delta_temp>
        <g_grav>-12.44</g_grav>
        <particles>
            <x>0.6</x>
            <y>0.6</y>
            <z>0.6</z>
            <velocityX>0.0</velocityX>
            <velocityY>0.0</velocityY>
            <velocityZ>0.0</velocityZ>
            <mass>1</mass>
            <epsilon>1</epsilon>
            <sigma>1.2</sigma>
        </particles>
        <particles>
            <x>0.6</x>
            <y>24.6</y>
            <z>0.6</z>
            <velocityX>0.0</velocityX>
            <velocityY>0.0</velocityY>
            <velocityZ>0.0</velocityZ>
            <mass>2</mass>
            <epsilon>1</epsilon>
            <sigma>1.1</sigma>
        </particles>
        <cuboids>
            <n1>40</n1>
            <n2>20</n2>
            <n3>40</n3>
            <distance>1.2</distance>
            <meanVelocity>0.1</meanVelocity>
            <dimension>3</dimension>
            
        </cuboids>
        <cuboids>
            <n1>40</n1>
            <n2>20</n2>
            <n3>40</n3>
            <distance>1.2</distance>
            <meanVelocity>0.1</meanVelocity>
            <dimension>3</dimension>
        </cuboids>

    </input>
    <output>
        <baseName>simulation_output</baseName>
        <writeFrequency>100</writeFrequency>
        <outputType>vtk</outputType>
    </output>
    <config>
        <performanceMeasurement>false</performanceMeasurement>
        <logLevel>warn</logLevel>
    </config>
</simulation>
