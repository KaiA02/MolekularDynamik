<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/inputReader/simulation.xsd">
    <input>
        <tStart>0.0</tStart>
        <tEnd>50</tEnd>
        <deltaT>0.01</deltaT>
        <ParallelStrategy>0</ParallelStrategy>
        <smoothLJ>false</smoothLJ>
        <particleContainerType>LC</particleContainerType>
        <r_cutoff>4.0</r_cutoff>
        <r_l>0</r_l>
        <domainSizeX>148</domainSizeX>
        <domainSizeY>148</domainSizeY>
        <domainSizeZ>148</domainSizeZ>
        <boundary1Type>2</boundary1Type>
        <boundary2Type>2</boundary2Type>
        <boundary3Type>2</boundary3Type>
        <boundary4Type>2</boundary4Type>
        <boundary5Type>2</boundary5Type>
        <boundary6Type>2</boundary6Type>
        <thermostatON>NO</thermostatON>
        <temp_init>40</temp_init>
        <n_thermostat>1</n_thermostat>
        <temp_target>40</temp_target>
        <delta_temp>0</delta_temp>
        <g_grav>-0.001</g_grav>
        <particles>
            <x>15.0</x>
            <y>15.0</y>
            <z>1.5</z>
            <velocityX>0.0</velocityX>
            <velocityY>0.0</velocityY>
            <velocityZ>0.0</velocityZ>
            <mass>0.5</mass>
            <epsilon>1</epsilon>
            <sigma>1</sigma>
        </particles>
        <particles>
            <x>50.0</x>
            <y>50.0</y>
            <z>30</z>
            <velocityX>0.0</velocityX>
            <velocityY>0.0</velocityY>
            <velocityZ>-5.0</velocityZ>
            <mass>0.5</mass>
            <epsilon>1</epsilon>
            <sigma>1</sigma>
        </particles>
        <cuboids>
            <n1>8</n1>
            <n2>8</n2>
            <n3>8</n3>
            <distance>1.15</distance>
            <meanVelocity>0.1</meanVelocity>
            <dimension>3</dimension>
        </cuboids>
        <membrane>
            <n1>50</n1>
            <n2>50</n2>
            <n3>1</n3>
            <distance>2.2</distance>
            <meanVelocity>0.0</meanVelocity>
            <forceUpwards>16.0</forceUpwards>
            <id1a>17</id1a>
            <id1b>24</id1b>
            <id2a>17</id2a>
            <id2b>25</id2b>
            <id3a>18</id3a>
            <id3b>24</id3b>
            <id4a>18</id4a>
            <id4b>25</id4b>
        </membrane>

    </input>
    <output>
        <baseName>simulation_output</baseName>
        <writeFrequency>100</writeFrequency>
        <outputType>vtk</outputType>
    </output>
    <config>
        <performanceMeasurement>false</performanceMeasurement>
        <logLevel>warn</logLevel>
    </config>
</simulation>
